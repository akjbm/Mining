<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReplaceNameActivity">
    <include layout="@layout/common_status_bar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >
        <FrameLayout
            android:id="@+id/fl_close"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="15dp"
                app:srcCompat="@mipmap/exit"
                android:layout_gravity="center_vertical"
                ></ImageView>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_name"
            android:layout_centerInParent="true"
            style="@style/title_style"
            ></TextView>
        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            android:textColor="@color/tab_selected_color"
            ></TextView>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_name"
        android:paddingLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:text="111234"
        android:textSize="15dp"
        android:textColor="@color/commonTextColor"
        android:layout_height="55dp"></EditText>
</LinearLayout>