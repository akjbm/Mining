<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InviteFriendActivity">
    <include layout="@layout/common_status_bar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <FrameLayout
            android:id="@+id/exit"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="18dp"
                android:layout_height="15dp"
                app:srcCompat="@mipmap/exit"
                android:layout_gravity="center"
                ></ImageView>
        </FrameLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yaoqing_haoyou"
            android:layout_centerInParent="true"
            style="@style/title_style"
            ></TextView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_save_pic"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@mipmap/bg_yaoqing"
            >
            <TextView
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yaoqing_quanqiu_wei_ye"
                android:textSize="14dp"
                android:textColor="@color/white"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_white_radius_10"
            >
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title"
                android:textSize="14dp"
                android:textColor="@color/light_common_text"
                ></TextView>
            <TextView
                android:id="@+id/tv_invite_code"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1A2B3C"
                android:textSize="24dp"
                android:textColor="@color/commonTextColor"
                android:textStyle="bold"
                ></TextView>
        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_white_radius_10"
        >
        <TextView
            android:id="@+id/tv_save_pic"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_pic"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/save"
            android:textColor="@color/commonTextColor"
            android:textSize="12sp"
            ></TextView>
        <TextView
            android:id="@+id/tv_copy_link"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/copy_lianjie"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/copy"
            android:textColor="@color/commonTextColor"
            android:textSize="12sp"
            ></TextView>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share_weixin"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/share"
            android:textColor="@color/commonTextColor"
            android:textSize="12sp"
            ></TextView>
    </LinearLayout>
</LinearLayout>